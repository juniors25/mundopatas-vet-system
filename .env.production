# MUNDO PATAS - Variables de Entorno para Producción

# Base de datos PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:5432/mundopatas

# JWT Secret (cambiar por una clave segura)
JWT_SECRET=mundo-patas-production-secret-key-2024

# Puerto del servidor
PORT=3000

# Entorno
NODE_ENV=production

# URLs de la aplicación
FRONTEND_URL=https://mundopatas.netlify.app
BACKEND_URL=https://mundopatas-api.railway.app

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# Configuración de seguridad
CORS_ORIGIN=https://mundopatas.netlify.app
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log
