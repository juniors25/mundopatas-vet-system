# MUNDO PATAS - Variables de Entorno para Render
# Este archivo debe ser configurado en el dashboard de Render

# Base de datos PostgreSQL - Se configura automáticamente por Render
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (se genera automáticamente en Render)
# JWT_SECRET=mundo-patas-production-secret-key-2024

# Puerto del servidor (Render lo asigna automáticamente)
# PORT=10000

# Entorno
NODE_ENV=production

# URLs de la aplicación (actualizar con el dominio real)
FRONTEND_URL=https://sistemamundopatas.com
BACKEND_URL=https://sistemamundopatas.com

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Configuración de seguridad
CORS_ORIGIN=https://sistemamundopatas.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log
