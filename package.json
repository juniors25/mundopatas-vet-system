{
  "name": "veterinaria-app",
  "version": "1.0.1",
  "description": "Sistema de gestión veterinaria con registro de mascotas, informes y análisis",
  "main": "server-postgres.js",
  "scripts": {
    "start": "node server-postgres.js",
    "dev": "nodemon server-postgres.js",
    "build": "npm install",
    "migrate": "node scripts/run-migrations.js",
    "migrate:create": "node scripts/create-migration.js",
    "db:reset": "node scripts/reset-database.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
