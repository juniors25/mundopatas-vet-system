    "twilio": "^4.19.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "bcrypt": "^6.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "veterinaria",
    "mascotas",
    "gestión",
    "informes"
